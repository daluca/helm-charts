{
    "$id": "https://raw.githubusercontent.com/daluca/helm-charts/main/charts/mealie/values.schema.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "additionalProperties": false,
    "properties": {
        "common": {
            "additionalProperties": false,
            "properties": {
                "global": {
                    "additionalProperties": true,
                    "type": "object"
                }
            },
            "type": "object"
        },
        "config": {
            "additionalProperties": false,
            "allOf": [
                {
                    "anyOf": [
                        {
                            "not": {
                                "properties": {
                                    "SMTP_AUTH_STRATEGY": {
                                        "const": "TLS"
                                    }
                                }
                            }
                        },
                        {
                            "required": ["SMTP_USER", "SMTP_PASSWORD"]
                        }
                    ]
                },
                {
                    "anyOf": [
                        {
                            "not": {
                                "properties": {
                                    "SMTP_AUTH_STRATEGY": {
                                        "const": "SSL"
                                    }
                                }
                            }
                        },
                        {
                            "required": ["SMTP_USER", "SMTP_PASSWORD"]
                        }
                    ]
                }
            ],
            "properties": {
                "ALLOW_SIGNUP": {
                    "type": "boolean"
                },
                "API_DOCS": {
                    "type": "boolean"
                },
                "API_PORT": {
                    "maximum": 65535,
                    "minimum": 0,
                    "type": "integer"
                },
                "BASE_URL": {
                    "format": "uri",
                    "type": "string"
                },
                "DAILY_SCHEDULE_TIME": {
                    "pattern": "[0-9]{2}:[0-9]{2}",
                    "type": "string"
                },
                "DEFAULT_GROUP": {
                    "type": "string"
                },
                "LDAP_ADMIN_FILTER": {
                    "type": "string"
                },
                "LDAP_AUTH_ENABLED": {
                    "type": "boolean"
                },
                "LDAP_BASE_DN": {
                    "type": "string"
                },
                "LDAP_ENABLE_STARTTLS": {
                    "type": "boolean"
                },
                "LDAP_ID_ATTRIBUTE": {
                    "type": "string"
                },
                "LDAP_MAIL_ATTRIBUTE": {
                    "type": "string"
                },
                "LDAP_NAME_ATTRIBUTE": {
                    "type": "string"
                },
                "LDAP_QUERY_BIND": {
                    "type": "string"
                },
                "LDAP_QUERY_PASSWORD": {
                    "type": "string"
                },
                "LDAP_SERVER_URL": {
                    "format": "uri",
                    "type": "string"
                },
                "LDAP_TLS_CACERTFILE": {
                    "pattern": "^/",
                    "type": "string"
                },
                "LDAP_TLS_INSECURE": {
                    "type": "boolean"
                },
                "LDAP_USER_FILTER": {
                    "type": "string"
                },
                "LOG_CONFIG_OVERRIDE": {
                    "pattern": "^/",
                    "type": "string"
                },
                "LOG_LEVEL": {
                    "enum": [
                        "critical",
                        "error",
                        "warning",
                        "info",
                        "debug",
                        "trace"
                    ]
                },
                "OIDC_ADMIN_GROUP": {
                    "type": "string"
                },
                "OIDC_AUTH_ENABLED": {
                    "type": "boolean"
                },
                "OIDC_AUTO_REDIRECT": {
                    "type": "boolean"
                },
                "OIDC_CLIENT_ID": {
                    "type": "string"
                },
                "OIDC_CONFIGURATION_URL": {
                    "format": "uri",
                    "type": "string"
                },
                "OIDC_GROUPS_CLAIM": {
                    "type": "string"
                },
                "OIDC_PROVIDER_NAME": {
                    "type": "string"
                },
                "OIDC_REMEMBER_ME": {
                    "type": "boolean"
                },
                "OIDC_SIGNING_ALGORITHM": {
                    "type": "string"
                },
                "OIDC_SIGNUP_ENABLED": {
                    "type": "boolean"
                },
                "OIDC_TLS_CACERTFILE": {
                    "pattern": "^/",
                    "type": "string"
                },
                "OIDC_USER_CLAIM": {
                    "type": "string"
                },
                "OIDC_USER_GROUP": {
                    "type": "string"
                },
                "OPENAI_API_KEY": {
                    "type": "string"
                },
                "OPENAI_BASE_URL": {
                    "format": "uri",
                    "type": "string"
                },
                "OPENAI_ENABLE_IMAGE_SERVICES": {
                    "type": "boolean"
                },
                "OPENAI_MODEL": {
                    "type": "string"
                },
                "OPENAI_REQUEST_TIMEOUT": {
                    "minimum": 1,
                    "type": "integer"
                },
                "OPENAI_SEND_DATABASE_DATA": {
                    "type": "boolean"
                },
                "OPENAI_WORKERS": {
                    "minimum": 1,
                    "type": "integer"
                },
                "PGID": {
                    "maximum": 65534,
                    "minimum": 0,
                    "type": "integer"
                },
                "PUID": {
                    "maximum": 65534,
                    "minimum": 0,
                    "type": "integer"
                },
                "SECURITY_MAX_LOGIN_ATTEMPTS": {
                    "minimum": 1,
                    "type": "integer"
                },
                "SECURITY_USER_LOCKOUT_TIME": {
                    "minimum": 0,
                    "type": "integer"
                },
                "SMTP_AUTH_STRATEGY": {
                    "enum": ["TLS", "SSL", "NONE"]
                },
                "SMTP_FROM_EMAIL": {
                    "type": "string"
                },
                "SMTP_FROM_NAME": {
                    "type": "string"
                },
                "SMTP_HOST": {
                    "format": "hostname",
                    "type": "string"
                },
                "SMTP_PASSWORD": {
                    "type": "string"
                },
                "SMTP_PORT": {
                    "maximum": 65535,
                    "minimum": 0,
                    "type": "integer"
                },
                "SMTP_USER": {
                    "type": "string"
                },
                "THEME_DARK_ACCENT": {
                    "pattern": "#[0-9A-F]{6}",
                    "type": "string"
                },
                "THEME_DARK_ERROR": {
                    "pattern": "#[0-9A-F]{6}",
                    "type": "string"
                },
                "THEME_DARK_INFO": {
                    "pattern": "#[0-9A-F]{6}",
                    "type": "string"
                },
                "THEME_DARK_PRIMARY": {
                    "pattern": "#[0-9A-F]{6}",
                    "type": "string"
                },
                "THEME_DARK_SECONDARY": {
                    "pattern": "#[0-9A-F]{6}",
                    "type": "string"
                },
                "THEME_DARK_SUCCESS": {
                    "pattern": "#[0-9A-F]{6}",
                    "type": "string"
                },
                "THEME_DARK_WARNING": {
                    "pattern": "#[0-9A-F]{6}",
                    "type": "string"
                },
                "THEME_LIGHT_ACCENT": {
                    "pattern": "#[0-9A-F]{6}",
                    "type": "string"
                },
                "THEME_LIGHT_ERROR": {
                    "pattern": "#[0-9A-F]{6}",
                    "type": "string"
                },
                "THEME_LIGHT_INFO": {
                    "pattern": "#[0-9A-F]{6}",
                    "type": "string"
                },
                "THEME_LIGHT_PRIMARY": {
                    "pattern": "#[0-9A-F]{6}",
                    "type": "string"
                },
                "THEME_LIGHT_SECONDARY": {
                    "pattern": "#[0-9A-F]{6}",
                    "type": "string"
                },
                "THEME_LIGHT_SUCCESS": {
                    "pattern": "#[0-9A-F]{6}",
                    "type": "string"
                },
                "THEME_LIGHT_WARNING": {
                    "pattern": "#[0-9A-F]{6}",
                    "type": "string"
                },
                "TOKEN_TIME": {
                    "minimum": 1,
                    "type": "integer"
                },
                "TZ": {
                    "type": "string"
                },
                "UVICORN_WORKERS": {
                    "minimum": 1,
                    "type": "integer"
                }
            },
            "required": ["SMTP_AUTH_STRATEGY"],
            "type": "object"
        },
        "database": {
            "additionalProperties": false,
            "properties": {
                "existingSecret": {
                    "type": "string"
                },
                "external": {
                    "type": "boolean"
                },
                "host": {
                    "format": "hostname",
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                },
                "port": {
                    "maximum": 65535,
                    "minimum": 0,
                    "type": "integer"
                },
                "type": {
                    "enum": ["postgres", "sqlite"]
                },
                "username": {
                    "type": "string"
                }
            },
            "required": ["type", "external"],
            "type": "object"
        },
        "fullnameOverride": {
            "maxLength": 63,
            "pattern": "^([a-z0-9]([-a-z0-9]*[a-z0-9])?|)$",
            "type": "string"
        },
        "image": {
            "additionalProperties": false,
            "properties": {
                "pullPolicy": {
                    "enum": ["Always", "Never", "IfNotPresent"]
                },
                "registry": {
                    "type": "string"
                },
                "repository": {
                    "type": "string"
                },
                "sha256": {
                    "pattern": "^(|[a-z0-9]{64})$",
                    "type": "string"
                },
                "tag": {
                    "type": "string"
                }
            },
            "type": "object"
        },
        "ingress": {
            "additionalProperties": false,
            "properties": {
                "annotations": {
                    "additionalProperties": {
                        "type": "string"
                    },
                    "type": "object"
                },
                "className": {
                    "type": "string"
                },
                "enabled": {
                    "type": "boolean"
                },
                "hosts": {
                    "items": {
                        "additionalProperties": false,
                        "properties": {
                            "host": {
                                "format": "hostname",
                                "type": "string"
                            },
                            "paths": {
                                "items": {
                                    "additionalProperties": false,
                                    "properties": {
                                        "path": {
                                            "pattern": "^/",
                                            "type": "string"
                                        },
                                        "pathType": {
                                            "enum": [
                                                "Prefix",
                                                "Exact",
                                                "ImplementationSpecific"
                                            ]
                                        }
                                    },
                                    "required": ["path", "pathType"],
                                    "type": "object"
                                },
                                "minItems": 1,
                                "type": "array",
                                "uniqueItems": true
                            }
                        },
                        "required": ["host", "paths"],
                        "type": "object"
                    },
                    "type": "array",
                    "uniqueItems": true
                },
                "tls": {
                    "items": {
                        "additionalProperties": false,
                        "properties": {
                            "hosts": {
                                "items": {
                                    "format": "hostname",
                                    "type": "string"
                                },
                                "minItems": 1,
                                "type": "array",
                                "uniqueItems": true
                            },
                            "secretName": {
                                "type": "string"
                            }
                        },
                        "required": ["hosts", "secretName"],
                        "type": "object"
                    },
                    "type": "array",
                    "uniqueItems": true
                }
            },
            "type": "object"
        },
        "livenessProbe": {
            "additionalProperties": false,
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "failureThreshold": {
                    "minimum": 1,
                    "type": "integer"
                },
                "initialDelaySeconds": {
                    "minimum": 0,
                    "type": "integer"
                },
                "periodSeconds": {
                    "minimum": 1,
                    "type": "integer"
                },
                "successThreshold": {
                    "minimum": 1,
                    "type": "integer"
                },
                "terminationGracePeriodSeconds": {
                    "minimum": 1,
                    "type": "integer"
                },
                "timeoutSeconds": {
                    "minimum": 1,
                    "type": "integer"
                }
            },
            "type": "object"
        },
        "nameOverride": {
            "maxLength": 63,
            "pattern": "^([a-z0-9]([-a-z0-9]*[a-z0-9])?|)$",
            "type": "string"
        },
        "persistence": {
            "additionalProperties": false,
            "properties": {
                "accessModes": {
                    "items": {
                        "enum": [
                            "ReadWriteOnce",
                            "ReadOnlyMany",
                            "ReadWriteMany",
                            "ReadWriteOncePod"
                        ]
                    },
                    "type": "array",
                    "unevaluatedItems": false,
                    "uniqueItems": true
                },
                "enabled": {
                    "type": "boolean"
                },
                "size": {
                    "type": "string"
                },
                "storageClass": {
                    "type": "string"
                }
            },
            "type": "object"
        },
        "postgresql": {
            "additionalProperties": true,
            "properties": {
                "auth": {
                    "additionalProperties": true,
                    "properties": {
                        "database": {
                            "type": "string"
                        },
                        "password": {
                            "type": "string"
                        },
                        "username": {
                            "type": "string"
                        }
                    },
                    "type": "object"
                },
                "enabled": {
                    "type": "boolean"
                },
                "service": {
                    "additionalProperties": true,
                    "properties": {
                        "ports": {
                            "additionalProperties": true,
                            "properties": {
                                "postgresql": {
                                    "maximum": 65535,
                                    "minimum": 0,
                                    "type": "integer"
                                }
                            },
                            "type": "object"
                        }
                    },
                    "type": "object"
                }
            },
            "required": ["enabled"],
            "type": "object"
        },
        "readinessProbe": {
            "additionalProperties": false,
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "failureThreshold": {
                    "minimum": 1,
                    "type": "integer"
                },
                "initialDelaySeconds": {
                    "minimum": 0,
                    "type": "integer"
                },
                "periodSeconds": {
                    "minimum": 1,
                    "type": "integer"
                },
                "successThreshold": {
                    "minimum": 1,
                    "type": "integer"
                },
                "terminationGracePeriodSeconds": {
                    "minimum": 1,
                    "type": "integer"
                },
                "timeoutSeconds": {
                    "minimum": 1,
                    "type": "integer"
                }
            },
            "type": "object"
        },
        "replicaCount": {
            "minimum": 0,
            "type": "integer"
        },
        "resources": {
            "additionalProperties": false,
            "properties": {
                "limits": {
                    "oneOf": [
                        {
                            "additionalProperties": false,
                            "patternProperties": {
                                "^hugepages-": {
                                    "type": "string"
                                }
                            },
                            "properties": {
                                "cpu": {
                                    "oneOf": [
                                        {
                                            "type": "string"
                                        },
                                        {
                                            "type": "null"
                                        }
                                    ]
                                },
                                "memory": {
                                    "oneOf": [
                                        {
                                            "type": "string"
                                        },
                                        {
                                            "type": "null"
                                        }
                                    ]
                                }
                            },
                            "type": "object"
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "requests": {
                    "oneOf": [
                        {
                            "additionalProperties": false,
                            "patternProperties": {
                                "^hugepages-": {
                                    "type": "string"
                                }
                            },
                            "properties": {
                                "cpu": {
                                    "oneOf": [
                                        {
                                            "type": "string"
                                        },
                                        {
                                            "type": "null"
                                        }
                                    ]
                                },
                                "memory": {
                                    "oneOf": [
                                        {
                                            "type": "string"
                                        },
                                        {
                                            "type": "null"
                                        }
                                    ]
                                }
                            },
                            "type": "object"
                        },
                        {
                            "type": "null"
                        }
                    ]
                }
            },
            "type": "object"
        },
        "service": {
            "additionalProperties": false,
            "properties": {
                "annotations": {
                    "additionalProperties": {
                        "type": "string"
                    },
                    "type": "object"
                },
                "containerPort": {
                    "maximum": 65535,
                    "minimum": 0,
                    "type": "integer"
                },
                "port": {
                    "maximum": 65535,
                    "minimum": 0,
                    "type": "integer"
                },
                "type": {
                    "enum": ["ClusterIP", "NodePort", "LoadBalancer"]
                }
            },
            "type": "object"
        },
        "serviceAccount": {
            "additionalProperties": false,
            "properties": {
                "annotations": {
                    "additionalProperties": {
                        "type": "string"
                    },
                    "type": "object"
                },
                "create": {
                    "type": "boolean"
                },
                "name": {
                    "type": "string"
                }
            },
            "type": "object"
        },
        "startupProbe": {
            "additionalProperties": false,
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "failureThreshold": {
                    "minimum": 1,
                    "type": "integer"
                },
                "initialDelaySeconds": {
                    "minimum": 0,
                    "type": "integer"
                },
                "periodSeconds": {
                    "minimum": 1,
                    "type": "integer"
                },
                "successThreshold": {
                    "minimum": 1,
                    "type": "integer"
                },
                "terminationGracePeriodSeconds": {
                    "minimum": 1,
                    "type": "integer"
                },
                "timeoutSeconds": {
                    "minimum": 1,
                    "type": "integer"
                }
            },
            "type": "object"
        }
    },
    "type": "object"
}
