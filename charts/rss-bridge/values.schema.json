{
    "$id": "https://raw.githubusercontent.com/daluca/helm-charts/main/charts/rss-bridge/values.schema.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "additionalProperties": false,
    "properties": {
        "fullnameOverride": {
            "maxLength": 63,
            "pattern": "^([a-z0-9]([-a-z0-9]*[a-z0-9])?|)$",
            "type": "string"
        },
        "image": {
            "additionalProperties": false,
            "properties": {
                "pullPolicy": {
                    "enum": ["Always", "Never", "IfNotPresent"]
                },
                "registry": {
                    "type": "string"
                },
                "repository": {
                    "type": "string"
                },
                "sha256": {
                    "pattern": "^(|[a-z0-9]{64})$",
                    "type": "string"
                },
                "tag": {
                    "type": "string"
                }
            },
            "type": "object"
        },
        "ingress": {
            "additionalProperties": false,
            "properties": {
                "annotations": {
                    "additionalProperties": {
                        "type": "string"
                    },
                    "type": "object"
                },
                "className": {
                    "type": "string"
                },
                "enabled": {
                    "type": "boolean"
                },
                "hosts": {
                    "items": {
                        "additionalProperties": false,
                        "properties": {
                            "host": {
                                "format": "hostname",
                                "type": "string"
                            },
                            "paths": {
                                "items": {
                                    "additionalProperties": false,
                                    "properties": {
                                        "path": {
                                            "pattern": "^/",
                                            "type": "string"
                                        },
                                        "pathType": {
                                            "enum": [
                                                "Prefix",
                                                "Exact",
                                                "ImplementationSpecific"
                                            ]
                                        }
                                    },
                                    "required": ["path", "pathType"],
                                    "type": "object"
                                },
                                "minItems": 1,
                                "type": "array",
                                "uniqueItems": true
                            }
                        },
                        "required": ["host", "paths"],
                        "type": "object"
                    },
                    "type": "array",
                    "uniqueItems": true
                },
                "tls": {
                    "items": {
                        "additionalProperties": false,
                        "properties": {
                            "hosts": {
                                "items": {
                                    "format": "hostname",
                                    "type": "string"
                                },
                                "minItems": 1,
                                "type": "array",
                                "uniqueItems": true
                            },
                            "secretName": {
                                "type": "string"
                            }
                        },
                        "required": ["hosts", "secretName"],
                        "type": "object"
                    },
                    "type": "array",
                    "uniqueItems": true
                }
            },
            "type": "object"
        },
        "livenessProbe": {
            "additionalProperties": false,
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "failureThreshold": {
                    "minimum": 1,
                    "type": "integer"
                },
                "initialDelaySeconds": {
                    "minimum": 0,
                    "type": "integer"
                },
                "periodSeconds": {
                    "minimum": 1,
                    "type": "integer"
                },
                "successThreshold": {
                    "minimum": 1,
                    "type": "integer"
                },
                "terminationGracePeriodSeconds": {
                    "minimum": 1,
                    "type": "integer"
                },
                "timeoutSeconds": {
                    "minimum": 1,
                    "type": "integer"
                }
            },
            "type": "object"
        },
        "memcached": {
            "additionalProperties": true,
            "properties": {
                "enabled": {
                    "type": "boolean"
                }
            },
            "required": ["enabled"],
            "type": "object"
        },
        "nameOverride": {
            "maxLength": 63,
            "pattern": "^([a-z0-9]([-a-z0-9]*[a-z0-9])?|)$",
            "type": "string"
        },
        "readinessProbe": {
            "additionalProperties": false,
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "failureThreshold": {
                    "minimum": 1,
                    "type": "integer"
                },
                "initialDelaySeconds": {
                    "minimum": 0,
                    "type": "integer"
                },
                "periodSeconds": {
                    "minimum": 1,
                    "type": "integer"
                },
                "successThreshold": {
                    "minimum": 1,
                    "type": "integer"
                },
                "terminationGracePeriodSeconds": {
                    "minimum": 1,
                    "type": "integer"
                },
                "timeoutSeconds": {
                    "minimum": 1,
                    "type": "integer"
                }
            },
            "type": "object"
        },
        "replicaCount": {
            "minimum": 0,
            "type": "integer"
        },
        "resources": {
            "additionalProperties": false,
            "properties": {
                "limits": {
                    "additionalProperties": false,
                    "patternProperties": {
                        "^hugepages-": {
                            "type": "string"
                        }
                    },
                    "properties": {
                        "cpu": {
                            "type": "string"
                        },
                        "memory": {
                            "type": "string"
                        }
                    },
                    "type": "object"
                },
                "requests": {
                    "additionalProperties": false,
                    "patternProperties": {
                        "^hugepages-": {
                            "type": "string"
                        }
                    },
                    "properties": {
                        "cpu": {
                            "type": "string"
                        },
                        "memory": {
                            "type": "string"
                        }
                    },
                    "type": "object"
                }
            },
            "type": "object"
        },
        "rssBridge": {
            "additionalProperties": false,
            "properties": {
                "admin": {
                    "additionalProperties": false,
                    "properties": {
                        "donations": {
                            "type": "boolean"
                        },
                        "email": {
                            "format": "email",
                            "type": ["string", "null"]
                        },
                        "telegram": {
                            "type": "string"
                        }
                    },
                    "type": "object"
                },
                "authentication": {
                    "additionalProperties": false,
                    "properties": {
                        "enabled": {
                            "type": "boolean"
                        },
                        "password": {
                            "minLength": 12,
                            "type": "string"
                        },
                        "token": {
                            "minLength": 12,
                            "type": ["string", "null"]
                        },
                        "username": {
                            "type": "string"
                        }
                    },
                    "type": "object"
                },
                "cache": {
                    "additionalProperties": false,
                    "properties": {
                        "customTimeout": {
                            "type": "boolean"
                        },
                        "type": {
                            "enum": ["file", "sqlite", "memcached"]
                        }
                    },
                    "type": "object"
                },
                "discogsBridge": {
                    "additionalProperties": false,
                    "properties": {
                        "presonalAccessToken": {
                            "type": "string"
                        }
                    },
                    "type": "object"
                },
                "error": {
                    "additionalProperties": false,
                    "properties": {
                        "output": {
                            "enum": ["feed", "http", "none"]
                        },
                        "reportLimit": {
                            "minimum": 1,
                            "type": "integer"
                        }
                    },
                    "type": "object"
                },
                "fileCache": {
                    "additionalProperties": false,
                    "properties": {
                        "enablePurge": {
                            "type": "boolean"
                        },
                        "path": {
                            "type": "string"
                        }
                    },
                    "type": "object"
                },
                "http": {
                    "additionalProperties": false,
                    "properties": {
                        "maxFilesize": {
                            "minimum": 1,
                            "type": "integer"
                        },
                        "timeout": {
                            "minimum": 1,
                            "type": "integer"
                        },
                        "useragent": {
                            "type": "string"
                        }
                    },
                    "type": "object"
                },
                "memcachedCache": {
                    "additionalProperties": false,
                    "properties": {
                        "host": {
                            "format": "hostname",
                            "type": "string"
                        },
                        "port": {
                            "maximum": 65535,
                            "minimum": 0,
                            "type": "integer"
                        }
                    },
                    "type": "object"
                },
                "proxy": {
                    "additionalProperties": false,
                    "properties": {
                        "byBridge": {
                            "type": "boolean"
                        },
                        "name": {
                            "type": "string"
                        },
                        "url": {
                            "format": "uri",
                            "type": ["string", "null"]
                        }
                    },
                    "type": "object"
                },
                "sqliteCache": {
                    "additionalProperties": false,
                    "properties": {
                        "enablePurge": {
                            "type": "boolean"
                        },
                        "file": {
                            "type": "string"
                        },
                        "timeout": {
                            "minimum": 0,
                            "type": "integer"
                        }
                    },
                    "type": "object"
                },
                "system": {
                    "additionalProperties": false,
                    "properties": {
                        "bridges": {
                            "items": {
                                "type": "string"
                            },
                            "minContains": 1,
                            "type": "array",
                            "uniqueItems": true
                        },
                        "debug": {
                            "additionalProperties": false,
                            "properties": {
                                "enabled": {
                                    "type": "boolean"
                                },
                                "whitelist": {
                                    "items": {
                                        "format": "ipv4",
                                        "type": "string"
                                    },
                                    "type": "array",
                                    "uniqueItems": true
                                }
                            },
                            "type": "object"
                        },
                        "maintenanceMode": {
                            "type": "boolean"
                        },
                        "message": {
                            "type": "string"
                        },
                        "timezone": {
                            "type": "string"
                        }
                    },
                    "type": "object"
                }
            },
            "type": "object"
        },
        "service": {
            "additionalProperties": false,
            "properties": {
                "annotations": {
                    "additionalProperties": {
                        "type": "string"
                    },
                    "type": "object"
                },
                "containerPort": {
                    "maximum": 65535,
                    "minimum": 0,
                    "type": "integer"
                },
                "port": {
                    "maximum": 65535,
                    "minimum": 0,
                    "type": "integer"
                },
                "type": {
                    "enum": ["ClusterIP", "NodePort", "LoadBalancer"]
                }
            },
            "type": "object"
        },
        "serviceAccount": {
            "additionalProperties": false,
            "properties": {
                "annotations": {
                    "additionalProperties": {
                        "type": "string"
                    },
                    "type": "object"
                },
                "create": {
                    "type": "boolean"
                },
                "name": {
                    "type": "string"
                }
            },
            "type": "object"
        },
        "startupProbe": {
            "additionalProperties": false,
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "failureThreshold": {
                    "minimum": 1,
                    "type": "integer"
                },
                "initialDelaySeconds": {
                    "minimum": 0,
                    "type": "integer"
                },
                "periodSeconds": {
                    "minimum": 1,
                    "type": "integer"
                },
                "successThreshold": {
                    "minimum": 1,
                    "type": "integer"
                },
                "terminationGracePeriodSeconds": {
                    "minimum": 1,
                    "type": "integer"
                },
                "timeoutSeconds": {
                    "minimum": 1,
                    "type": "integer"
                }
            },
            "type": "object"
        }
    },
    "type": "object"
}
