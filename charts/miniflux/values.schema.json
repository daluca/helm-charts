{
    "$schema": "http://json-schema.org/schema",
    "$id": "https://raw.githubusercontent.com/daluca/helm-charts/main/charts/synapse/values.schema.json",
    "type": "object",
    "required": ["image", "postgresql"],
    "additionalProperties": false,
    "properties": {
        "nameOverride": {
            "type": "string",
            "maxLength": 63,
            "pattern": "^([a-z0-9]([-a-z0-9]*[a-z0-9])?|)$"
        },
        "fullnameOverride": {
            "type": "string",
            "maxLength": 63,
            "pattern": "^([a-z0-9]([-a-z0-9]*[a-z0-9])?|)$"
        },
        "replicaCount": {
            "type": "number",
            "minimum": 0
        },
        "image": {
            "type": "object",
            "required": ["repository"],
            "additionalProperties": false,
            "properties": {
                "registry": {
                    "type": "string"
                },
                "repository": {
                    "type": "string"
                },
                "tag": {
                    "type": "string"
                },
                "sha": {
                    "type": "string",
                    "pattern": "^(|sha256:[a-z0-9]{64})$"
                },
                "pullPolicy": {
                    "enum": ["Always", "Never", "IfNotPresent"]
                }
            }
        },
        "service": {
            "type": "object",
            "required": ["containerPort"],
            "additionalProperties": false,
            "properties": {
                "type": {
                    "type": "string",
                    "enum": ["ClusterIP", "NodePort", "LoadBalancer"]
                },
                "port": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 65535
                },
                "containerPort": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 65535
                }
            }
        },
        "ingress": {
            "type": "object",
            "required": ["enabled"],
            "additionalProperties": false,
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "className": {
                    "type": "string"
                },
                "annotations": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "string"
                    }
                },
                "tls": {
                    "type": "array",
                    "uniqueItems": true,
                    "items": {
                        "type": "object",
                        "required": ["hosts", "secretName"],
                        "additionalProperties": false,
                        "properties": {
                            "hosts": {
                                "type": "array",
                                "uniqueItems": true,
                                "minimum": 1,
                                "items": {
                                    "type": "string",
                                    "format": "hostname"
                                }
                            },
                            "secretName": {
                                "type": "string"
                            }
                        }
                    }
                },
                "hosts": {
                    "type": "array",
                    "uniqueItems": true,
                    "items": {
                        "type": "object",
                        "required": ["host", "paths"],
                        "additionalProperties": false,
                        "properties": {
                            "host": {
                                "type": "string",
                                "format": "hostname"
                            },
                            "paths": {
                                "type": "array",
                                "uniqueItems": true,
                                "minimum": 1,
                                "items": {
                                    "type": "object",
                                    "additionalProperties": false,
                                    "required": ["path", "pathType"],
                                    "properties": {
                                        "path": {
                                            "type": "string",
                                            "pattern": "^/"
                                        },
                                        "pathType": {
                                            "type": "string",
                                            "enum": [
                                                "Prefix",
                                                "Exact",
                                                "ImplementationSpecific"
                                            ]
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "serviceAccount": {
            "type": "object",
            "required": ["create"],
            "additionalProperties": false,
            "properties": {
                "create": {
                    "type": "boolean"
                },
                "annotations": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "string"
                    }
                }
            }
        },
        "resources": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "requests": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "cpu": { "type": "string" },
                        "memory": { "type": "string" }
                    },
                    "patternProperties": {
                        "^hugepages-": {
                            "type": "string"
                        }
                    }
                },
                "limits": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "cpu": { "type": "string" },
                        "memory": { "type": "string" }
                    },
                    "patternProperties": {
                        "^hugepages-": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "livenessProbe": {
            "type": "object",
            "required": ["enabled"],
            "additionalProperties": false,
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "initialDelaySeconds": {
                    "type": "number",
                    "minimum": 0
                },
                "periodSeconds": {
                    "type": "number",
                    "minimum": 1
                },
                "timeoutSeconds": {
                    "type": "number",
                    "minimum": 1
                },
                "successThreshold": {
                    "type": "number",
                    "minimum": 1
                },
                "failureThreshold": {
                    "type": "number",
                    "minimum": 1
                },
                "terminationGracePeriodSeconds": {
                    "type": "number",
                    "minimum": 1
                }
            }
        },
        "readinessProbe": {
            "type": "object",
            "required": ["enabled"],
            "additionalProperties": false,
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "initialDelaySeconds": {
                    "type": "number",
                    "minimum": 0
                },
                "periodSeconds": {
                    "type": "number",
                    "minimum": 1
                },
                "timeoutSeconds": {
                    "type": "number",
                    "minimum": 1
                },
                "successThreshold": {
                    "type": "number",
                    "minimum": 1
                },
                "failureThreshold": {
                    "type": "number",
                    "minimum": 1
                },
                "terminationGracePeriodSeconds": {
                    "type": "number",
                    "minimum": 1
                }
            }
        },
        "startupProbe": {
            "type": "object",
            "required": ["enabled"],
            "additionalProperties": false,
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "initialDelaySeconds": {
                    "type": "number",
                    "minimum": 0
                },
                "periodSeconds": {
                    "type": "number",
                    "minimum": 1
                },
                "timeoutSeconds": {
                    "type": "number",
                    "minimum": 1
                },
                "successThreshold": {
                    "type": "number",
                    "minimum": 1
                },
                "failureThreshold": {
                    "type": "number",
                    "minimum": 1
                },
                "terminationGracePeriodSeconds": {
                    "type": "number",
                    "minimum": 1
                }
            }
        },
        "config": {
            "type": "object",
            "additionalProperties": {
                "type": "string"
            }
        },
        "secrets": {
            "type": "object",
            "additionalProperties": {
                "type": "string"
            }
        },
        "existingSecret": {
            "type": "string"
        },
        "admin": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "username": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                },
                "existingSecret": {
                    "type": "string"
                }
            }
        },
        "externalDatabase": {
            "type": "object",
            "required": ["enabled"],
            "additionalProperties": false,
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "url": {
                    "type": ["string", "null"],
                    "format": "uri",
                    "pattern": "^postgres(ql)?://"
                },
                "existingSecret": {
                    "type": "string"
                }
            }
        },
        "postgresql": {
            "type": "object",
            "required": ["enabled"],
            "additionalProperties": true,
            "properties": {
                "enabled": {
                    "type": "boolean"
                }
            }
        }
    }
}
