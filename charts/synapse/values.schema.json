{
    "$id": "https://raw.githubusercontent.com/daluca/helm-charts/main/charts/synapse/values.schema.json",
    "$schema": "charts/synapse/values.schema.json",
    "type": "object",
    "additionalProperties": false,
    "required": ["image", "service"],
    "properties": {
        "nameOverride": {
            "$ref": "#/$defs/dns-name"
        },
        "fullnameOverride": {
            "$ref": "#/$defs/dns-name"
        },
        "replicaCount": {
            "type": "number",
            "minimum": 0
        },
        "image": {
            "type": "object",
            "additionalProperties": false,
            "required": ["repository"],
            "properties": {
                "registry": {
                    "type": "string"
                },
                "repository": {
                    "type": "string"
                },
                "tag": {
                    "type": "string"
                },
                "sha256": {
                    "type": "string",
                    "pattern": "^(|[a-z0-9]{64})$"
                },
                "pullPolicy": {
                    "enum": ["Always", "Never", "IfNotPresent"]
                }
            }
        },
        "service": {
            "type": "object",
            "additionalProperties": false,
            "required": ["containerPort"],
            "properties": {
                "type": {
                    "enum": ["ClusterIP", "NodePort", "LoadBalancer"]
                },
                "port": {
                    "$ref": "#/$defs/port"
                },
                "containerPort": {
                    "$ref": "#/$defs/port"
                }
            }
        },
        "ingress": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "className": {
                    "type": "string"
                },
                "annotations": {
                    "$ref": "#/$defs/annotations"
                },
                "host": {
                    "type": "string",
                    "format": "hostname"
                },
                "tls": {
                    "type": "boolean"
                }
            }
        },
        "serviceAccount": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "create": {
                    "type": "boolean"
                },
                "name": {
                    "type": "string"
                },
                "annotations": {
                    "$ref": "#/$defs/annotations"
                }
            }
        },
        "resources": {
            "type": "object",
            "additionalProperties": true,
            "properties": {
                "requests": {
                    "$ref": "#/$defs/resource"
                },
                "limits": {
                    "$ref": "#/$defs/resource"
                }
            }
        },
        "livenessProbe": {
            "$ref": "#/$defs/probe"
        },
        "readinessProbe": {
            "$ref": "#/$defs/probe"
        },
        "startupProbe": {
            "$ref": "#/$defs/probe"
        },
        "persistence": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "storageClassName": {
                    "type": "string"
                },
                "size": {
                    "type": "string"
                },
                "accessModes": {
                    "type": "array",
                    "uniqueItems": true,
                    "items": {
                        "enum": [
                            "ReadWriteOnce",
                            "ReadOnlyMany",
                            "ReadWriteMany",
                            "ReadWriteOncePod"
                        ]
                    }
                }
            }
        },
        "admin": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "create": {
                    "type": "boolean"
                },
                "username": {
                    "type": "string"
                },
                "password": {
                    "type": "string",
                    "minimum": 12
                },
                "existingSecret": {
                    "type": "string"
                }
            }
        },
        "homeserver": {
            "type": "object",
            "additionalProperties": {
                "type": ["string", "boolean"]
            },
            "required": ["server_name", "report_stats"],
            "properties": {
                "server_name": {
                    "type": "string",
                    "format": "hostname"
                },
                "report_stats": {
                    "type": "boolean"
                },
                "existingSecret": {
                    "type": "string"
                }
            }
        },
        "logging": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "level": {
                    "$ref": "#/$defs/log-level"
                },
                "handlers": {
                    "type": "array",
                    "uniqueItems": true,
                    "additionalItems": false,
                    "minimum": 1,
                    "items": {
                        "enum": ["buffer", "console"]
                    }
                },
                "buffer": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "level": {
                            "$ref": "#/$defs/log-level"
                        },
                        "location": {
                            "type": "string"
                        }
                    }
                },
                "console": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "level": {
                            "$ref": "#/$defs/log-level"
                        }
                    }
                }
            }
        },
        "delegation": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "className": {
                    "type": "string"
                },
                "annotations": {
                    "$ref": "#/$defs/annotations"
                },
                "tls": {
                    "type": "boolean"
                }
            }
        },
        "database": {
            "type": "object",
            "additionalProperties": false,
            "required": ["type"],
            "properties": {
                "type": {
                    "enum": ["postgresql", "sqlite"]
                },
                "external": {
                    "type": "boolean"
                },
                "name": {
                    "type": "string"
                },
                "host": {
                    "type": "string",
                    "format": "hostname"
                },
                "port": {
                    "$ref": "#/$defs/port"
                },
                "username": {
                    "type": "string"
                },
                "password": {
                    "type": "string",
                    "minimum": 12
                },
                "existingSecret": {
                    "type": "string"
                },
                "arguments": {
                    "type": "object",
                    "additionalProperties": {
                        "type": ["string", "number"]
                    }
                }
            }
        },
        "postgresql": {
            "type": "object",
            "additionalProperties": true,
            "required": ["enabled"],
            "properties": {
                "enabled": {
                    "type": "boolean"
                }
            }
        }
    },
    "$defs": {
        "dns-name": {
            "type": "string",
            "maxLength": 63,
            "pattern": "^([a-z0-9]([-a-z0-9]*[a-z0-9])?|)$"
        },
        "port": {
            "type": "number",
            "minimum": 0,
            "maximum": 65535
        },
        "annotations": {
            "type": "object",
            "additionalProperties": {
                "type": "string"
            }
        },
        "resource": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "cpu": {
                    "type": "string"
                },
                "memory": {
                    "type": "string"
                }
            },
            "patternProperties": {
                "^hugepages-": {
                    "type": "string"
                }
            }
        },
        "probe": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "initialDelaySeconds": {
                    "type": "number",
                    "minimum": 0
                },
                "periodSeconds": {
                    "type": "number",
                    "minimum": 1
                },
                "timeoutSeconds": {
                    "type": "number",
                    "minimum": 1
                },
                "successThreshold": {
                    "type": "number",
                    "minimum": 1
                },
                "failureThreshold": {
                    "type": "number",
                    "minimum": 1
                },
                "terminationGracePeriodSeconds": {
                    "type": "number",
                    "minimum": 1
                }
            }
        },
        "log-level": {
            "enum": ["NOTSET", "DEBUG", "INFO", "WARNING", "ERROR", "CRITICAL"]
        }
    }
}
